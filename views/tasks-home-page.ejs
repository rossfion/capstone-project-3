<%- include('partials/header.ejs') %>
<%- include('partials/navigation.ejs') %>
        
        <main>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <header><h1>Fionn's Blog Web App</h1>
                            <p class="lead">Capstone Project #3</p>
                        </header>
                            <h3><%= (admin) ? 'Admin Area' : 'To Do List' %></h3>
                    </div><!-- ./ end div class col-md-12 -->
                        <article class="row">
                            <section class="col-lg-12">
                                <% if (tasks.length) { %>
                                    <div class="row">
                                        <% for(let task of tasks) { %>
                                            <div class="col-md-12">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <h5 class="card-title"><%= task.task %></h5>
                                                            <div class="my-2 text-left d-flex justify-content-left">
                                                                <form action="/tasks/delete" method="post">
                                                                    <input type="hidden" name="taskId" value="<%= task.id %>">
									<button class="btn btn-danger">Delete</button>
								</form>		
                                                            </div>
						
                                                    </div>
                                               </div>
                                           </div><!-- card and card body amd colmd-12 -->
					 <hr style="margin-top: 8px;" />
				                    
                                        <% } %><!-- end for loop -->
                                                                            
                                <% } else { %>
			
                                <div><h2>No tasks in the list</h2></div>    
			
				  </div>
                            </div>
                        </div>
                    </div>
				  
				  
                                <% } %><!-- end if (tasks.length) -->
			
			</section>
                    </article>
                </div><!-- ./ end main col-md-6 -->
            </div><!-- ./ end main row -->
        </div><!-- ./ end main container -->
    </main>
<%- include('partials/footer.ejs') %>