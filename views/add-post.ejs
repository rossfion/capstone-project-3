<%- include('partials/header.ejs') %>
<%- include('partials/navigation.ejs') %>
<!-- The add-posts.ejs form is used to create and edit posts -->
<!-- The switch is achieved using the ternary operator -->
    <main>
        <div class="container">
        <div class="row">
        <div class="col-md-12">
              <h2><%= edit ? 'Edit Post' : 'Add Post' %></h2>
                    <form method="POST" action="<%= edit ? '/posts/edit' : '/posts/add' %>">
                      <% if (edit) { %>
                        <input type="hidden" name="postId" value="<%= post.id %>"/>
                        <% } %>
                      <p>
                        <label for="title">Title</label>
                        <input type="text" class="form-control" name="title" value="<%= edit ? post.title : '' %>" />
                      </p>
                      <!--<p>
                        <label for="image">Image Url</label>
                        <input type="text" class="form-control" name="image" value="<%= edit ? post.image : '' %>" />
                      </p>-->
               <p>
                        <label for="summary">Summary</label>
                        <input type="text" class="form-control" name="summary" value="<%= edit ? post.summary : '' %>" />
                      </p>
                      <p>
                        <label for="description">Description</label>
                        <textarea name="description" id="description" class="form-control"><%= edit ? post.description : '' %></textarea>
                      </p>
                      <p>
                        <button><%= edit ? 'Edit Post' : 'Add Post' %></button>
                      </p>
                    </form>
        </div><!-- ./ end main col-md-12 -->
        </div><!-- ./ end main row -->
        </div><!-- ./ end main container -->
    </main>
  <%- include('partials/footer.ejs') %>